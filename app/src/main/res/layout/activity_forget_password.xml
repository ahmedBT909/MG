<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".RegisterActivity">


    <EditText
        android:id="@+id/forget_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/Beige"
        android:textColorHint="@color/sea"
        android:textSize="17sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/person"
        android:background="@drawable/custom_text"
        />

    <TextView
        android:id="@+id/backlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back To Login"
        android:layout_below="@+id/forget_email_input"
        android:textColor="@color/sea"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />




    <Button
        android:id="@+id/for_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backlogin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Done"
        android:textColor="@color/sea"
        android:backgroundTint="#9401080E"
        />

</RelativeLayout>